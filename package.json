{
  "name": "data-eden",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://github.com/data-eden/data-eden#readme",
  "bugs": {
    "url": "https://github.com/data-eden/data-eden/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/data-eden/data-eden.git"
  },
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --watch",
    "test": "npm-run-all lint test:*",
    "test:workspaces": "npm test --workspaces",
    "lint": "npm-run-all \"lint:!(fix)\"",
    "lint:fix": "npm-run-all lint:*:fix",
    "lint:ts": "eslint .",
    "lint:ts:fix": "eslint . --fix",
    "lint:tsc": "tsc --noEmit",
    "lint:package-json": "sort-package-json --check package.json \"packages/*/package.json\"",
    "lint:package-json:fix": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "lint:prettier": "prettier --ignore-unknown --check .",
    "lint:prettier:fix": "prettier --write --ignore-unknown ."
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.ts": [
      "eslint --fix"
    ],
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "lint-staged": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "release-it": "^14.2.1",
    "release-it-lerna-changelog": "^3.1.0",
    "release-it-yarn-workspaces": "^2.0.0",
    "sort-package-json": "^1.57.0",
    "typescript": "^4.7.3",
    "vite": "^2.9.9",
    "vitest": "^0.13.1"
  },
  "volta": {
    "node": "16.15.0",
    "npm": "8.11.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  }
}
