{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "es2020",
    "moduleResolution": "node16",
    "paths": {
      "*": ["./types/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2021"
  },
  "exclude": ["**/node_modules/**"]
}
