{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "es2020",
    "moduleResolution": "node16",
    "strict": true,
    "target": "es2021",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./types/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "**/node_modules/**"
  ]
}
