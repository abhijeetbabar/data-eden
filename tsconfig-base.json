{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["**/node_modules/**"]
}
